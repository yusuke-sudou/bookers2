<h1>User info</h1>
<div>
  <%= image_tag user.get_profile_image(100,100) %>
  <h3>name<%= user.name %></h3>
  <h3>introduction<%= user.introduction %></h3>
</div>
<%=link_to "edit", edit_user_path(user.id)%>

<h1>New book</h1>

<%= form_with model: book,url:"/books",method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>