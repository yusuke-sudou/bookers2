
<div class="container">
<div class="row">
<div class="col-md-3">        
<%= render 'list', book: @book_new,user:@user %>
</div>

<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table">
<td><%= image_tag @user.get_profile_image(100,100) %>
  <h4><%= link_to @user.name,user_path(@user.id) %></h4>
</td>
  
<td><%= link_to @book.title, book_path(@book.id) %></td>
<td><%=@book.body%></td>

<% if @book.user == current_user %>
   <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
   <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>  
<% end %>
  
</table>
</div>
</div>
</div>